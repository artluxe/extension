{
  "name": "Artluxe Capture - Full web screenshot and reference capture",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "Screen capture your current page and save",
  
  "browser_action": {
    "default_icon": "artluxe-favicon-32x32.png",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      }
    }
  },

  "permissions": [ "activeTab", "storage", "unlimitedStorage" ],
  
  "icons": {
    "16": "artluxe-favicon-16x16.png",
    "32": "artluxe-favicon-32x32.png",
    "48": "Artluxe_logo_48.png",
    "128": "Artluxe_logo_128.png"
  }
}
